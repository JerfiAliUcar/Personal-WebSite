@model About

<h2 class="mt-3">Edit Form</h2>
<form asp-area="Admin" asp-controller="About" asp-action="Edit" method="post">

    <label class="form-label">Name</label>
    <input type="text" asp-for="Name" name="Name" class="form-control">
    <br />

    <label class="form-label">Surname</label>
    <input type="text" asp-for="Surname" name="Surname" class="form-control">
    <br />

    <label class="form-label">Adress</label>
    <input type="text" asp-for="Adress" name="Adress" class="form-control">
    <br />

    <label class="form-label">Phone Number</label>
    <input type="tel" asp-for="Phone" name="Phone" class="form-control">
    <br />

    <label class="form-label">Mail</label>
    <input type="email" asp-for="Mail" name="Mail" class="form-control">
    <br />

    <label class="form-label">Description</label>
    <textarea type="text" asp-for="Description" name="Description" class="form-control"></textarea>
    <br />

    <button class="btn btn-primary">Save</button>

</form>
