@model List<About>

<h2 class="mt-3">Kişiler</h2>
<div class="mt-4" style="padding-left:unset">

    <span class="text-danger">@ViewBag.message</span>
    <table class="table table-dark  table-striped-columns">
        <thead>
            <tr>
                <th>ID</th>
                <th>Ad</th>
                <th>Soyad</th>
                <th>Adres</th>
                <th>Mail</th>
                <th>Phone</th>
                <th>Description</th>

            </tr>
        </thead>
        @foreach (About item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Surname</td>
                <td>@item.Adress</td>
                <td>@item.Mail</td>
                <td>@item.Phone</td>
                <td>@item.Description</td>


                <td>
                    <a asp-area="Admin" asp-controller="About" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Düzenle</a>

                    <a asp-area="Admin" asp-controller="About" asp-action="Delete" asp-route-id="@item.Id" class="btn-danger btn">Sil</a>
                </td>
            </tr>

        }
    </table>
    <div>
        <a asp-area="Admin" asp-controller="About" asp-action="Create" class="btn btn-primary"> Create New </a>
    </div>

</div>