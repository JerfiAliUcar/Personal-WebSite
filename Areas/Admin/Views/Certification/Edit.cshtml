@model Certification

<h2 class="mb-5">Edit Form</h2>
<form asp-area="Admin" asp-controller="Certification" asp-action="Edit" method="post">

    <label class="form-label">Sertifika Bilgisi</label>
    <input type="text" asp-for="Description" name="Description" class="form-control" required>
    <br />

    <label class="form-label">Sertifika Linki</label>
    <input type="text" asp-for="Link" name="Link" class="form-control" required>
    <br />
    
    <label class="form-label">Tarih</label>
    <input type="date" asp-for="Tarih" name="Tarih" class="form-control" required>
    <br />


    <button class="btn btn-primary">Save</button>

</form>