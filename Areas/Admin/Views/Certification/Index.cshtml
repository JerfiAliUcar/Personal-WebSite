@model List<Certification>
@{
    string path = "";
}

<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <div class="row">

                <!-- /.col -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header p-2">
                        </div><!-- /.card-header -->
                        <div class="card-body">

                            <div class="tab-pane" id="timeline">
                                <!-- The timeline -->
                                <div class="timeline timeline-inverse" >
                                    <div style="padding-left:85%">
                                        <a asp-area="Admin" asp-controller="Certification" asp-action="Create" class="btn btn-primary"> Create New </a>
                                    </div>
                                    @foreach (var item in Model)
                                    {
                                        <div class="time-label">
                                            <span class="bg-success">
                                                @item.Tarih
                                            </span>
                                        </div>

                                        <div>
                                            <i class="fas fa-camera bg-purple"></i>
                                            <div class="timeline-item">
                                                <h3 class="timeline-header"><a href="#">Jerfi Ali Uçar</a> - Serifika </h3>
                                                <div class="timeline-body">
                                                    @if ((item.Description.Contains("Goldenmade")))
                                                    {
                                                        <a href="@item.Link"><img src="~/assets/img/sertifika.jpg" width="350px"></a>

                                                    }
                                                    @if ((item.Description.Contains("Platinummade")))
                                                    {
                                                        <a href="@item.Link"><img src="~/assets/img/sertifika2.jpg" width="350px"></a>
                                                    }
                                                    @if ((item.Description.Contains("Sports")))
                                                    {
                                                        <a href="@item.Link"><img src="~/assets/img/FourFourTwo_Sertifika.jpg" width="350px"></a>
                                                    }
                                                    @if (item.Description.Contains("American"))
                                                    {
                                                        <a href="@item.Link"><img src="~/assets/img/EnglishSertifika.jpg" width="350px"></a>
                                                    }

                                                    <br />
                                                    <b><a href="@item.Link" style="color:darkred;">@item.Description</a></b>
                                                    <br />
                                                    <a asp-area="Admin" asp-controller="Certification" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Düzenle</a>

                                                    <a asp-area="Admin" asp-controller="Certification" asp-action="Delete" asp-route-id="@item.Id" class="btn-danger btn">Sil</a>

                                                </div>
                                            </div>
                                        </div>
                                        
                                    }
                                    
                                    <!-- END timeline item -->
                                    <div>
                                        <i class="far fa-clock bg-gray"></i>
                                    </div>
                                   
                                </div> 
                                
                               
                            </div>

                            <!-- /.tab-content -->
                        </div><!-- /.card-body -->
                    </div>
                    <!-- /.nav-tabs-custom -->
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div><!-- /.container-fluid -->
    </section>
</body>

