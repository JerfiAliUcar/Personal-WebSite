@model List<Experience>

<h2 class="mt-3">Deneyim Bilgileri</h2>
<div class="mt-4" style="padding-left:unset">

    <span class="text-danger">@ViewBag.message</span>
    <table class="table table-dark  table-striped-columns">
        <thead>
            <tr>
                <th>ID</th>
                <th>Başlık</th>
                <th>Alt Başlık</th>
                <th>Açıklama</th>
                <th>Tarih</th>
            </tr>
        </thead>
        @foreach (Experience item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Title</td>
                <td>@item.SubTitle</td>
                <td>@item.Description</td>
                <td>@item.Tarih</td>

                <td>
                    <a asp-area="Admin" asp-controller="Experience" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Düzenle</a>

                    <a asp-area="Admin" asp-controller="Experience" asp-action="Delete" asp-route-id="@item.Id" class="btn-danger btn">Sil</a>
                </td>
            </tr>

        }
    </table>
    <div>
        <a asp-area="Admin" asp-controller="Experience" asp-action="Create" class="btn btn-primary"> Create New </a>
    </div>

</div>