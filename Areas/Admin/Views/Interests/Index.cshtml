@model List<Interests>

<h2 class="mt-3">Hobiler</h2>
<div class="mt-4" style="padding-left:unset">

    <span class="text-danger">@ViewBag.message</span>
    <table class="table table-dark  table-striped-columns">
        <thead>
            <tr>
                <th>ID</th>
                <th>Açıklama</th>
                <th>Açıklama 2</th>
            </tr>
        </thead>
        @foreach (Interests item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Description1</td>
                <td>@item.Description2</td>

                <td>
                    <a asp-area="Admin" asp-controller="Interests" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Düzenle</a>

                    <a asp-area="Admin" asp-controller="Interests" asp-action="Delete" asp-route-id="@item.Id" class="btn-danger btn">Sil</a>
                </td>
            </tr>
        }
    </table>
    <div>
        <a asp-area="Admin" asp-controller="Interests" asp-action="Create" class="btn btn-primary"> Create New </a>
    </div>

</div>