@model Skills

<h2 class="mb-5">Edit Form</h2>
<form asp-area="Admin" asp-controller="Skills" asp-action="Edit" method="post">

    <label class="form-label">Yetenek</label>
    <input type="text" asp-for="Skill" name="Skill" class="form-control" required>
    <br />

    <label class="form-label">Derece</label>
    <input type="number" asp-for="Derece" name="Derece" class="form-control" min="0" max="100" required>

    <button class="btn btn-primary">Save</button>

</form>
