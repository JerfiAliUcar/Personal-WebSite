@model List<Skills>
@{
    string color = "";
}
@{
    string oranColor = "";
}
<h2 class="mt-3">Yetenekler</h2>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <div class="mt-4" style="padding-left:unset">
           
        </div>
        <!-- /.card-header -->
        <div class="card-body">

            <table class="table table-dark table-striped-columns">

                <thead>
                    <tr>
                        <th style="width: 10px">Id</th>
                        <th>Yetenek</th>
                        <th>Oran</th>
                        <th >Label</th>
                        <th>İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        @if (item.Derece <= 49 && item.Derece >= 0)
                        {
                            color = "progress-bar bg-danger";
                            oranColor = "badge bg-danger";
                        }
                        else if (item.Derece >= 50 && item.Derece <= 70)
                        {
                            color = "progress-bar bg-warning";
                            oranColor = "badge bg-warning";
                        }
                        else if (item.Derece > 70 && item.Derece <= 84)
                        {
                            color = "progress-bar bg-primary";
                            oranColor = "badge bg-primary";
                        }
                        else
                        {
                            color = "progress-bar bg-success";
                            oranColor = "badge bg-success";
                        }
                        <tr>
                            <td>@item.Id</td>
                            <td>@item.Skill</td>
                            <td>
                                <div class="progress progress-xs">
                                    <div class="@color" style="width: @item.Derece% "></div>
                                </div>
                            </td>



                            <td><span class="@oranColor">%@item.Derece</span></td>
                            <td>
                                <a asp-area ="Admin" asp-controller="Skills" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm" >
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Düzenle
                                </a>
                                <a asp-area="Admin" asp-controller="Skills" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" >
                                    <i class="fas fa-trash"> </i>
                                    Sil
                                </a>
                                 </td>
                        </tr>
                    }
                </tbody>
            </table>
            <br />
            <div>
                <a asp-area="Admin" asp-controller="Skills" asp-action="Create" class="btn btn-primary"> Create New </a>
            </div>
        </div>
    </div>
   
</body>
