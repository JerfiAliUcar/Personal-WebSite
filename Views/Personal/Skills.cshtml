@model List<Skills>
@{
    string color = "";
    string oranColor = "";
}

<section class="resume-section" id="skills">
    <div class="resume-section-content">
        <h2 class="mb-5">Yetenekler</h2>
        <div class="subheading mb-3">Programming Languages & Tools</div>
        <ul class="list-inline dev-icons">
            <li class="list-inline-item"><i class="fab fa-html5"></i></li>
            <li class="list-inline-item"><i class="fab fa-css3-alt"></i></li>
            <li class="list-inline-item"><i class="fab fa-js-square"></i></li>
            <li class="list-inline-item"><i class="fab fa-bootstrap"></i></li>
            <li class="list-inline-item"><i class="	fab fa-github"></i></li>
            <li class="list-inline-item"><i class="fab fa-bitcoin"></i></li>
            <li class="list-inline-item"><i class="fab fa-apple"></i></li>
            <li class="list-inline-item"><i class="fab fa-discord"></i></li>
        </ul>
        <div class="subheading mb-3">İŞ AKIŞI</div>

        <ul class="fa-ul mb-0">
            @foreach (Skills item in Model)
            {
                @if (item.Derece <= 49 && item.Derece >= 0)
                {
                    color = "progress-bar bg-danger";
                    oranColor = "badge bg-danger";
                }
                else if (item.Derece >= 50 && item.Derece <= 70)
                {
                    color = "progress-bar bg-warning";
                    oranColor = "badge bg-warning";
                }
                else if (item.Derece > 70 && item.Derece <= 84)
                {
                    color = "progress-bar bg-primary";
                    oranColor = "badge bg-primary";
                }
                else
                {
                    color = "progress-bar bg-success";
                    oranColor = "badge bg-success";
                }

                <li>
                    <span class="fa-li"><i class="fas fa-check"></i></span>
                    @item.Skill
                    <div class="progress progress-xs">
                        <div class="@color" style="width: @item.Derece%">
                            <span class="@oranColor"><a style="color:black;">%@item.Derece</a></span>
                            </div>




                    </div>

                </li>

            }
        </ul>
    </div>
</section>
<hr class="m-0" />